<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_pic2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/filebeg"
                app:civ_border_width="2dp"
                app:civ_border_color="#f5f5f7"/>
            <TextView
                android:id="@+id/item_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item_name"
                android:fontFamily="@font/hero_regular"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:layout_toRightOf="@id/item_pic2"
                />
            <TextView
                android:id="@+id/item_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item_description"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/hero_regular"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:layout_below="@id/item_name2"
                android:layout_toRightOf="@id/item_pic2"
                />
                <TextView
                    android:id="@+id/item_quant2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hero_regular"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="15dp"
                    android:text="Quantity 5"
                    />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>